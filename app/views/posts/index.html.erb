<h1>Posts Index</h1>
<br/>
<br/>

<div style=" display:flex; flex-flow:row, wrap; justify-content: space-evenly ">
	<% @posts.each do |post| %>
		<div class="card" style="width: 20rem;">
			<div class="card-body">
				<div class="card-header">
					<h2><%= post.title %></h2>
				</div>
				<p><%= post.body %></p>
				<div class="card-body">
					<%= link_to "Read More", post_path(post), :class => 'card-link'%>
				</div>
			</div>
		</div>

		<br/>

	<% end %>
</div>